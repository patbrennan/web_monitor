<% if object && object.errors.any? %>
  <div class="row">
    </div class="alert alert-danger span8">
      <h5>Please correct the following errors:</h5>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>